@page "{id:int}"
@model raf_pnp.Pages.Cases.EditModel
@{
    ViewData["Title"] = "Edit Case";
}

<div class="page-header">
    <h1><i class="bi bi-pencil-square me-2"></i>Edit Case: @Model.RafCase?.CaseNumber</h1>
    <p class="mb-0 opacity-75">Update case information</p>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="RafCase.Id" />
                    <input type="hidden" asp-for="RafCase.DateOpened" />

                    <!-- Case Details -->
                    <div class="mb-4">
                        <h5 class="border-bottom pb-2"><i class="bi bi-folder me-2"></i>Case Details</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="RafCase.CaseNumber" class="form-label">Case Number *</label>
                                <input asp-for="RafCase.CaseNumber" class="form-control" />
                                <span asp-validation-for="RafCase.CaseNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="RafCase.Status" class="form-label">Status</label>
                                <select asp-for="RafCase.Status" asp-items="Html.GetEnumSelectList<raf_pnp.Models.CaseStatus>()" class="form-select"></select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="RafCase.ClientId" class="form-label">Client *</label>
                                <select asp-for="RafCase.ClientId" asp-items="Model.ClientList" class="form-select">
                                    <option value="">-- Select Client --</option>
                                </select>
                                <span asp-validation-for="RafCase.ClientId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="RafCase.AccidentDate" class="form-label">Accident Date *</label>
                                <input asp-for="RafCase.AccidentDate" type="date" class="form-control" />
                                <span asp-validation-for="RafCase.AccidentDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="RafCase.AccidentLocation" class="form-label">Accident Location</label>
                            <input asp-for="RafCase.AccidentLocation" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="RafCase.AccidentDescription" class="form-label">Accident Description</label>
                            <textarea asp-for="RafCase.AccidentDescription" class="form-control" rows="3"></textarea>
                        </div>
                    </div>

                    <!-- Key Dates -->
                    <div class="mb-4">
                        <h5 class="border-bottom pb-2"><i class="bi bi-calendar me-2"></i>Key Dates</h5>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="RafCase.InitialLodgementDate" class="form-label">Initial Lodgement</label>
                                <input asp-for="RafCase.InitialLodgementDate" type="date" class="form-control" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="RafCase.MmiDate" class="form-label">MMI Date</label>
                                <input asp-for="RafCase.MmiDate" type="date" class="form-control" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="RafCase.ComplianceLodgementDate" class="form-label">Compliance Lodgement</label>
                                <input asp-for="RafCase.ComplianceLodgementDate" type="date" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="RafCase.StatutoryExpiryDate" class="form-label">120-Day Expiry</label>
                                <input asp-for="RafCase.StatutoryExpiryDate" type="date" class="form-control" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="RafCase.SummonsIssueDate" class="form-label">Summons Issue Date</label>
                                <input asp-for="RafCase.SummonsIssueDate" type="date" class="form-control" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="RafCase.DateClosed" class="form-label">Date Closed</label>
                                <input asp-for="RafCase.DateClosed" type="date" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <!-- Assignment -->
                    <div class="mb-4">
                        <h5 class="border-bottom pb-2"><i class="bi bi-people me-2"></i>Assignment</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="RafCase.AssignedAttorney" class="form-label">Assigned Attorney</label>
                                <input asp-for="RafCase.AssignedAttorney" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="RafCase.CandidateAttorney" class="form-label">Candidate Attorney</label>
                                <input asp-for="RafCase.CandidateAttorney" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <!-- Financial -->
                    <div class="mb-4">
                        <h5 class="border-bottom pb-2"><i class="bi bi-currency-dollar me-2"></i>Financial</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="RafCase.EstimatedClaimValue" class="form-label">Estimated Claim Value</label>
                                <input asp-for="RafCase.EstimatedClaimValue" type="number" step="0.01" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="RafCase.SettlementAmount" class="form-label">Settlement Amount</label>
                                <input asp-for="RafCase.SettlementAmount" type="number" step="0.01" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input asp-for="RafCase.FeeAgreementSigned" class="form-check-input" />
                                    <label asp-for="RafCase.FeeAgreementSigned" class="form-check-label">Fee Agreement Signed</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input asp-for="RafCase.ContingencyFeeAgreement" class="form-check-input" />
                                    <label asp-for="RafCase.ContingencyFeeAgreement" class="form-check-label">Contingency Fee Agreement</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Notes -->
                    <div class="mb-4">
                        <label asp-for="RafCase.Notes" class="form-label">Notes</label>
                        <textarea asp-for="RafCase.Notes" class="form-control" rows="4"></textarea>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-circle me-1"></i> Save Changes
                        </button>
                        <a asp-page="Details" asp-route-id="@Model.RafCase?.Id" class="btn btn-outline-secondary btn-lg">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
