@page "{id:int}"
@model raf_pnp.Pages.Clients.DetailsModel
@{
    ViewData["Title"] = Model.Client?.FullName ?? "Client Details";
}

@if (Model.Client == null)
{
    <div class="alert alert-danger">Client not found.</div>
    return;
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col-md-8">
            <h1><i class="bi bi-person-fill me-2"></i>@Model.Client.FullName</h1>
            <p class="mb-0 opacity-75">ID: @Model.Client.IdNumber | Client since: @Model.Client.DateCreated.ToString("dd MMM yyyy")</p>
        </div>
        <div class="col-md-4 text-md-end mt-3 mt-md-0">
            <a asp-page="Edit" asp-route-id="@Model.Client.Id" class="btn btn-light me-2">
                <i class="bi bi-pencil me-1"></i> Edit
            </a>
            <a asp-page="/Cases/Create" class="btn btn-light">
                <i class="bi bi-folder-plus me-1"></i> New Case
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        <!-- Client Info Card -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-person-badge me-2"></i>Contact Information
            </div>
            <div class="card-body">
                <table class="table table-borderless mb-0">
                    <tr>
                        <th class="text-muted" style="width: 40%;">Full Name:</th>
                        <td><strong>@Model.Client.FullName</strong></td>
                    </tr>
                    <tr>
                        <th class="text-muted">ID Number:</th>
                        <td>@Model.Client.IdNumber</td>
                    </tr>
                    <tr>
                        <th class="text-muted">Phone:</th>
                        <td>
                            @if (!string.IsNullOrEmpty(Model.Client.PhoneNumber))
                            {
                                <a href="tel:@Model.Client.PhoneNumber">@Model.Client.PhoneNumber</a>
                            }
                            else
                            {
                                <span class="text-muted">Not provided</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th class="text-muted">Email:</th>
                        <td>
                            @if (!string.IsNullOrEmpty(Model.Client.Email))
                            {
                                <a href="mailto:@Model.Client.Email">@Model.Client.Email</a>
                            }
                            else
                            {
                                <span class="text-muted">Not provided</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th class="text-muted">Address:</th>
                        <td>@(Model.Client.Address ?? "Not provided")</td>
                    </tr>
                </table>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-lightning me-2"></i>Quick Actions
            </div>
            <div class="card-body d-grid gap-2">
                <a asp-page="/Cases/Create" class="btn btn-primary">
                    <i class="bi bi-folder-plus me-1"></i> Create New Case
                </a>
                <a asp-page="Edit" asp-route-id="@Model.Client.Id" class="btn btn-outline-primary">
                    <i class="bi bi-pencil me-1"></i> Edit Client Details
                </a>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <!-- Client Cases -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-folder me-2"></i>Cases (@Model.Client.Cases.Count)</span>
                <a asp-page="/Cases/Create" class="btn btn-sm btn-primary">
                    <i class="bi bi-plus"></i> New Case
                </a>
            </div>
            <div class="card-body p-0">
                @if (Model.Client.Cases.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Case Number</th>
                                    <th>Accident Date</th>
                                    <th>Status</th>
                                    <th>Days Open</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var rafCase in Model.Client.Cases.OrderByDescending(c => c.DateOpened))
                                {
                                    <tr>
                                        <td>
                                            <strong>
                                                <a asp-page="/Cases/Details" asp-route-id="@rafCase.Id">@rafCase.CaseNumber</a>
                                            </strong>
                                        </td>
                                        <td>@rafCase.AccidentDate.ToString("dd MMM yyyy")</td>
                                        <td>
                                            <span class="badge badge-status @GetStatusBadgeClass(rafCase.Status)">
                                                @GetStatusDisplayName(rafCase.Status)
                                            </span>
                                        </td>
                                        <td>@rafCase.DaysSinceAccident days</td>
                                        <td class="text-center">
                                            <a asp-page="/Cases/Details" asp-route-id="@rafCase.Id" class="btn btn-sm btn-outline-primary">
                                                View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-folder-x display-4 text-muted"></i>
                        <p class="mt-2 text-muted">No cases for this client yet.</p>
                        <a asp-page="/Cases/Create" class="btn btn-primary">
                            <i class="bi bi-folder-plus me-1"></i> Create First Case
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(raf_pnp.Models.CaseStatus status)
    {
        return status switch
        {
            raf_pnp.Models.CaseStatus.ClientIntake => "badge-intake",
            raf_pnp.Models.CaseStatus.InitialLodgement => "badge-lodgement",
            raf_pnp.Models.CaseStatus.MmiWaitingPeriod => "badge-mmi",
            raf_pnp.Models.CaseStatus.ExpertAppointments => "badge-expert",
            raf_pnp.Models.CaseStatus.ComplianceLodgement => "badge-compliance",
            raf_pnp.Models.CaseStatus.StatutoryWaitingPeriod => "badge-waiting",
            raf_pnp.Models.CaseStatus.SummonsIssued => "badge-summons",
            raf_pnp.Models.CaseStatus.PajaApplication => "badge-paja",
            raf_pnp.Models.CaseStatus.PleadingPhase => "badge-pleading",
            raf_pnp.Models.CaseStatus.PreTrialPhase => "badge-pretrial",
            raf_pnp.Models.CaseStatus.TrialPhase => "badge-trial",
            raf_pnp.Models.CaseStatus.Finalised => "badge-finalised",
            raf_pnp.Models.CaseStatus.Closed => "badge-closed",
            _ => "bg-secondary"
        };
    }

    string GetStatusDisplayName(raf_pnp.Models.CaseStatus status)
    {
        return status switch
        {
            raf_pnp.Models.CaseStatus.ClientIntake => "Client Intake",
            raf_pnp.Models.CaseStatus.InitialLodgement => "Initial Lodgement",
            raf_pnp.Models.CaseStatus.MmiWaitingPeriod => "MMI Waiting",
            raf_pnp.Models.CaseStatus.ExpertAppointments => "Expert Appointments",
            raf_pnp.Models.CaseStatus.ComplianceLodgement => "Compliance Lodgement",
            raf_pnp.Models.CaseStatus.StatutoryWaitingPeriod => "120-Day Wait",
            raf_pnp.Models.CaseStatus.SummonsIssued => "Summons Issued",
            raf_pnp.Models.CaseStatus.PajaApplication => "PAJA Application",
            raf_pnp.Models.CaseStatus.PleadingPhase => "Pleading Phase",
            raf_pnp.Models.CaseStatus.PreTrialPhase => "Pre-Trial",
            raf_pnp.Models.CaseStatus.TrialPhase => "Trial",
            raf_pnp.Models.CaseStatus.Finalised => "Finalised",
            raf_pnp.Models.CaseStatus.Closed => "Closed",
            _ => status.ToString()
        };
    }
}
