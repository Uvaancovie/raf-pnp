@page
@model raf_pnp.Pages.Teams.IndexModel
@{
    ViewData["Title"] = "Teams";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-people-fill"></i> Teams</h2>
            <p class="text-muted">Manage your RAF case teams and members</p>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createTeamModal">
                <i class="bi bi-plus-circle"></i> Create Team
            </button>
        </div>
    </div>

    <!-- Teams Grid -->
    <div class="row g-4">
        @foreach (var team in Model.Teams)
        {
            var stats = Model.TeamStats.ContainsKey(team.Id) ? Model.TeamStats[team.Id] : null;

            <div class="col-md-6 col-lg-4">
                <div class="card h-100 team-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-people text-primary"></i> @team.Name
                            </h5>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-link text-muted" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/Teams/Details?id=@team.Id">
                                        <i class="bi bi-eye"></i> View Details
                                    </a></li>
                                    <li><a class="dropdown-item" href="/Teams/Edit?id=@team.Id">
                                        <i class="bi bi-pencil"></i> Edit Team
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" href="#" onclick="deleteTeam(@team.Id)">
                                        <i class="bi bi-trash"></i> Delete Team
                                    </a></li>
                                </ul>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(team.Description))
                        {
                            <p class="card-text text-muted small mb-3">@team.Description</p>
                        }

                        @if (team.LeadUser != null)
                        {
                            <div class="mb-3">
                                <small class="text-muted">Team Lead:</small><br>
                                <strong><i class="bi bi-person-badge"></i> @team.LeadUser.FullName</strong>
                            </div>
                        }

                        <div class="mb-3">
                            <small class="text-muted">Team Members:</small><br>
                            <div class="d-flex align-items-center flex-wrap mt-2">
                                @foreach (var member in team.TeamMembers.Take(5))
                                {
                                    <div class="avatar-circle me-2 mb-2" title="@member.User.FullName">
                                        @member.User.FullName.Substring(0, 1)
                                    </div>
                                }
                                @if (team.TeamMembers.Count > 5)
                                {
                                    <div class="avatar-circle me-2 mb-2 bg-secondary">
                                        +@(team.TeamMembers.Count - 5)
                                    </div>
                                }
                            </div>
                            <small class="text-muted">@team.TeamMembers.Count member(s)</small>
                        </div>

                        @if (stats != null)
                        {
                            <div class="row g-2 mt-3">
                                <div class="col-6">
                                    <div class="stat-box">
                                        <div class="stat-value">@stats.ActiveCases</div>
                                        <div class="stat-label">Active Cases</div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="stat-box">
                                        <div class="stat-value">@stats.ActiveTasks</div>
                                        <div class="stat-label">Active Tasks</div>
                                    </div>
                                </div>
                            </div>

                            @if (stats.TotalTasks > 0)
                            {
                                var completionRate = (double)stats.CompletedTasks / stats.TotalTasks * 100;
                                <div class="mt-3">
                                    <small class="text-muted">Task Completion Rate</small>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar bg-success" role="progressbar" 
                                             style="width: @completionRate%" 
                                             aria-valuenow="@completionRate" aria-valuemin="0" aria-valuemax="100">
                                            @completionRate.ToString("F0")%
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    <div class="card-footer bg-transparent">
                        <a href="/Teams/Details?id=@team.Id" class="btn btn-sm btn-outline-primary w-100">
                            <i class="bi bi-arrow-right-circle"></i> View Team Details
                        </a>
                    </div>
                </div>
            </div>
        }

        @if (!Model.Teams.Any())
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> No teams found. Create your first team to get started!
                </div>
            </div>
        }
    </div>
</div>

<!-- Create Team Modal -->
<div class="modal fade" id="createTeamModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Team</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createTeamForm">
                    <div class="mb-3">
                        <label class="form-label">Team Name *</label>
                        <input type="text" class="form-control" id="teamName" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" id="teamDescription" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Team Lead</label>
                        <select class="form-select" id="teamLead">
                            <option value="">Select Team Lead</option>
                            @* TODO: Load users from API *@
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="createTeam()">Create Team</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function createTeam() {
            const team = {
                name: document.getElementById('teamName').value,
                description: document.getElementById('teamDescription').value,
                leadUserId: document.getElementById('teamLead').value || null
            };

            try {
                const response = await fetch('/api/teams', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(team)
                });

                if (response.ok) {
                    window.location.reload();
                } else {
                    alert('Failed to create team');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred');
            }
        }

        async function deleteTeam(teamId) {
            if (!confirm('Are you sure you want to delete this team?')) {
                return;
            }

            try {
                const response = await fetch(`/api/teams/${teamId}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    window.location.reload();
                } else {
                    alert('Failed to delete team');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred');
            }
        }
    </script>
}

<style>
    .team-card {
        transition: all 0.3s;
        border-left: 4px solid #007bff;
    }

    .team-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
    }

    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #007bff;
        color: white;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 16px;
    }

    .stat-box {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 12px;
        text-align: center;
    }

    .stat-value {
        font-size: 24px;
        font-weight: bold;
        color: #007bff;
    }

    .stat-label {
        font-size: 12px;
        color: #6c757d;
        margin-top: 4px;
    }
</style>
