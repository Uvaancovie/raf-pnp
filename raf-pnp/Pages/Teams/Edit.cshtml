@page
@model raf_pnp.Pages.Teams.EditModel
@{
    ViewData["Title"] = "Edit Team";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Teams/Index">Teams</a></li>
                    <li class="breadcrumb-item"><a asp-page="/Teams/Details" asp-route-id="@Model.Team.Id">@Model.Team.Name</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </nav>
            <h2><i class="bi bi-pencil"></i> Edit Team</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Team.Id" />
                        <input type="hidden" asp-for="Team.CreatedDate" />
                        <input type="hidden" asp-for="Team.IsActive" />

                        <div class="mb-3">
                            <label asp-for="Team.Name" class="form-label"></label>
                            <input asp-for="Team.Name" class="form-control" />
                            <span asp-validation-for="Team.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Team.Description" class="form-label"></label>
                            <textarea asp-for="Team.Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Team.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Team.LeadUserId" class="form-label">Team Lead</label>
                            <select asp-for="Team.LeadUserId" asp-items="Model.UserSelectList" class="form-select">
                                <option value="">Select Team Lead (Optional)</option>
                            </select>
                            <span asp-validation-for="Team.LeadUserId" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Team.IsActive" class="form-check-input" />
                            <label asp-for="Team.IsActive" class="form-check-label"></label>
                            <div class="form-text">Inactive teams will not appear in active team listings</div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="/Teams/Details" asp-route-id="@Model.Team.Id" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-info-circle"></i> Edit Tips</h5>
                    <ul class="mb-0">
                        <li>Team name is required and should be descriptive</li>
                        <li>Add a clear description of the team's responsibilities</li>
                        <li>Assign a team lead to oversee team activities</li>
                        <li>Use the Details page to manage team members</li>
                    </ul>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title">Team Information</h6>
                    <dl class="mb-0">
                        <dt>Created:</dt>
                        <dd>@Model.Team.CreatedDate.ToString("MMM dd, yyyy")</dd>
                        <dt>Team ID:</dt>
                        <dd>@Model.Team.Id</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
