@page
@model raf_pnp.Pages.Reports.IndexModel
@{
    ViewData["Title"] = "Reports";
}

<div class="page-header">
    <h1><i class="bi bi-graph-up me-2"></i>Reports & Analytics</h1>
    <p class="mb-0 opacity-75">View case statistics and performance reports</p>
</div>

<!-- Summary Stats -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card stat-card h-100">
            <div class="card-body text-center">
                <div class="stat-number">@Model.TotalCases</div>
                <div class="stat-label">Total Cases</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card stat-card h-100">
            <div class="card-body text-center">
                <div class="stat-number">@Model.ActiveCases</div>
                <div class="stat-label">Active Cases</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card stat-card h-100">
            <div class="card-body text-center">
                <div class="stat-number">@Model.ClosedCases</div>
                <div class="stat-label">Closed Cases</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card stat-card h-100">
            <div class="card-body text-center">
                <div class="stat-number">@Model.TotalClients</div>
                <div class="stat-label">Total Clients</div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Cases by Status -->
    <div class="col-lg-6 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <i class="bi bi-bar-chart me-2"></i>Cases by Status
            </div>
            <div class="card-body">
                @foreach (var statusGroup in Model.CasesByStatus)
                {
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>@statusGroup.StatusName</span>
                            <span class="fw-bold">@statusGroup.Count</span>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar" role="progressbar" 
                                 style="width: @(Model.TotalCases > 0 ? (statusGroup.Count * 100 / Model.TotalCases) : 0)%">
                            </div>
                        </div>
                    </div>
                }
                @if (!Model.CasesByStatus.Any())
                {
                    <p class="text-muted text-center">No case data available.</p>
                }
            </div>
        </div>
    </div>

    <!-- Key Metrics -->
    <div class="col-lg-6 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <i class="bi bi-speedometer2 me-2"></i>Key Metrics
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <td><i class="bi bi-clock text-warning me-2"></i>Cases Awaiting MMI</td>
                        <td class="text-end fw-bold">@Model.AwaitingMmi</td>
                    </tr>
                    <tr>
                        <td><i class="bi bi-hourglass-split text-danger me-2"></i>Cases in 120-Day Period</td>
                        <td class="text-end fw-bold">@Model.In120DayPeriod</td>
                    </tr>
                    <tr>
                        <td><i class="bi bi-hospital text-info me-2"></i>Pending Expert Appointments</td>
                        <td class="text-end fw-bold">@Model.PendingExperts</td>
                    </tr>
                    <tr>
                        <td><i class="bi bi-bank text-dark me-2"></i>Cases in Litigation</td>
                        <td class="text-end fw-bold">@Model.InLitigation</td>
                    </tr>
                    <tr>
                        <td><i class="bi bi-check-circle text-success me-2"></i>Cases Finalised This Year</td>
                        <td class="text-end fw-bold">@Model.FinalisedThisYear</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Cases Approaching Deadlines -->
<div class="row">
    <div class="col-12 mb-4">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-exclamation-triangle me-2"></i>Cases Approaching Deadlines
            </div>
            <div class="card-body">
                @if (Model.ApproachingDeadlines.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Case Number</th>
                                    <th>Client</th>
                                    <th>Deadline Type</th>
                                    <th>Deadline Date</th>
                                    <th>Days Remaining</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ApproachingDeadlines)
                                {
                                    <tr class="@(item.DaysRemaining <= 7 ? "table-danger" : item.DaysRemaining <= 30 ? "table-warning" : "")">
                                        <td><strong>@item.CaseNumber</strong></td>
                                        <td>@item.ClientName</td>
                                        <td>@item.DeadlineType</td>
                                        <td>@item.DeadlineDate.ToString("dd MMM yyyy")</td>
                                        <td>
                                            <span class="badge @(item.DaysRemaining <= 7 ? "bg-danger" : item.DaysRemaining <= 30 ? "bg-warning text-dark" : "bg-info")">
                                                @item.DaysRemaining days
                                            </span>
                                        </td>
                                        <td>
                                            <a asp-page="/Cases/Details" asp-route-id="@item.CaseId" class="btn btn-sm btn-outline-primary">View</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-check-circle display-4 text-success"></i>
                        <p class="mt-2 text-muted">No urgent deadlines approaching.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
